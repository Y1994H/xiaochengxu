/* pages/home/home.wxss */
.container{
  display: flex;
  flex-direction: column;
  padding: 0 16rpx;
  height: 100vh;
}
.container swiper{
  width: 100%;
  height: 360rpx;
}
swiper swiper-item{
  width: 100%;
}
swiper swiper-item image{
  width: 100%;
  border-radius: 16rpx;
}
/* 导航菜单 */
.nav{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  background-color: #ef9ba8;
  border-radius: 16rpx;
  padding: 10rpx 0;
  margin-top: 10rpx;
}
.nav .menu{
  display: flex;
  flex-direction: column;
  width: 25%;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
}
.menu image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.menu text{
  font-size: 22rpx;
  color: #fff;
  margin-bottom: 10rpx;
}
/* 产品列表 */
.hot{
  display: block;
  text-align: center;
  margin-top: 10rpx;
}
.wrap{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background-color: #ef5369;
  padding-top: 10rpx;
}
.wrap .product{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 46%;
  margin: 0 10rpx;
  background-color: #ef9ba8;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
  margin-bottom: 15rpx;
}
.product image{
  border-top-right-radius: 16rpx;
  border-top-left-radius: 16rpx;
  width: 100%;
}
.info{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.name{
  color: #fff;
}
.info .price{
  color: red;
}
/*tab框切换*/
.nav_tab{
  width:100%;
  height:100rpx;
  display:flex;
  flex-direction:row;
}
.show{
  line-height:100rpx;
  text-align:center;
  flex:1;
  color:#333333;
  font-size:28rpx;
  opacity: 0.5;
}
.hidden{
  line-height:100rpx;
  text-align:center;
  color:#ef9ba8;
  flex:1;
  font-size:28rpx;
}
.nav_underline{
  background:#ef9ba8;
  width:54rpx;
  height:6rpx;
  margin-top:-10rpx;
  margin-left:70rpx;
  border-radius:8rpx;
}