/* pages/profile/profile.wxss */
scroll-view{
  width: 100%;
  height: 100vh;
}
.wrap{
  margin-bottom: 200rpx;
}
.product{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1px solid #5599ff;  
}
.info{
  width: 60%;
  display: flex;
  flex-direction: column;
}
.info .price{
  color: red;
  font-weight: 600;
}
.product image{
  width: 200rpx;
}
.bottom{
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
}